/* pages/hot/hot.wxss */
page{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  width: 100%;
  height: 100rpx;
  background:white;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  box-shadow: 0px 1rpx 2rpx #cccccc;
  position: fixed;
  z-index: 999;

}
.header .logo{
  width: 80rpx;
}
.header .searchbox{
  width: 500rpx;
  height: 80rpx;
  /* background-color:skyblue; */
  overflow: hidden;
  display: flex;
}
.searchbox .txt{
  padding-left: 20rpx;
  color: #333;
  border: 2rpx solid #f1534f;
  height: 100%;
  width: 420rpx;
  box-sizing: border-box;
  border-radius: 50rpx 0rpx 0rpx 50rpx;
  font-size: 26rpx;
}
.searchbox .btn{
  width: 80rpx;
  height: 100%;
  border-radius: 0rpx 50rpx 50rpx 0rpx;
  position: relative;
  background-color: #f1534f;
}
.searchbox .btn image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 0;left: 0;
  bottom: 0; right: 0;
  margin: auto;
}
.section{
  width: 100%;
  flex:1;
  column-count: 2;
  padding: 100rpx 20rpx 0rpx 20rpx;
  box-sizing: border-box;
  position: absolute;
  
}
.section .item{
  width: 100%;
  break-inside: avoid;
}
.section .item .img{
  width: 100%;
  display: block;
}
.section .item .content{
  padding: 20rpx 10rpx;
}
.section .item .content .title{
  font-size: 30rpx;
  height: 55rpx;
  line-height: 55rpx;
}
.section .item .content .userbox{
  display: flex;
}
.section .item .content .userbox image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: block;
 flex-shrink: 0;
}

  
.section .item .content .userbox  text{
  font-size: 24rpx;
  color: #444444;
  margin-left: 10rpx;
  line-height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 300rpx;
}
.content .con{
  font-size: 26rpx;
  color: #555;
}
.dataError{
  width: 100%;
  height:100%;
  position: absolute;
  top: 100rpx;
  left: 0;
  background-color: #fcfbfa;
  text-align: center;
  padding-top: 10%;
  display: none;
  z-index: -1;
}
.dataError image{
  border-radius: 50%;
}
.hidden{
  display: block;
}