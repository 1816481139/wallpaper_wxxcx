page{
  height: 100%;
}
.main{
  height: 100%;
  display: flex;
}
.main>.txt-nav{
  width: 27%;
  background-color: pink;
  overflow:auto;
  
}
.main>.img-nav{
  flex: 1;
  /* background-color: skyblue; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-content: flex-start;
  overflow: auto;
}
.txt-nav view{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color:#fafafa;
  font-size: 24rpx;
  color: #777777;
  position: relative;
}
.txt-nav view.active{
   color: #ee8581;
   font-size: 28rpx;
   font-weight: bold;
   background-color: white;

}
.active::after{
  content: "";
  position: absolute;
  height: 60%;
  width: 8rpx;
  background-color: #ee8581;
  border-radius: 10rpx;
  left: 5%;
  top: 50%;
  transform: translateY(-50%);

}
.imgbox {
  height: 240rpx;
  width: 240rpx;
  position: relative;
  background-color: rgb(221, 221, 221);
  overflow: hidden;
  border-radius: 20rpx;
  margin: 10rpx 0rpx;
  
}

.imgbox image{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.imgbox .bg{
  width: 100%;
  height: 100%;
  filter: blur(10px);

}

